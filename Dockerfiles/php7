FROM php:7.4.32-fpm-alpine3.16

WORKDIR /var/www

# Use `apk` para instalar pacotes no Alpine
RUN apk update \
    && apk upgrade \
    && apk add --no-cache \
        zip \
        unzip \
        curl \
        git \
        oniguruma-dev \
        icu-dev \
        libpng-dev \
        libjpeg-turbo-dev \
        freetype-dev \
        libxml2-dev \
        libzip-dev \
        bash \
        autoconf \
        g++ \
        make \
		openssh

# Instale extensões do PHP
RUN docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install -j$(nproc) pdo_mysql gd intl mbstring exif \
    && docker-php-ext-install -j$(nproc) soap xml zip

# Instale o Composer
RUN curl --show-error https://getcomposer.org/installer -o /tmp/composer-setup.php \
    && php /tmp/composer-setup.php --install-dir=/usr/local/bin --filename=composer \
    && rm /tmp/composer-setup.php

# Atualize o Composer para a versão 1.x
RUN composer self-update --1
