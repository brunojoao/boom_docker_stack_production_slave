FROM php:7.4.32-fpm-alpine3.16

WORKDIR /var/www

# Use `apk` para instalar pacotes no Alpine
RUN apk update \
    && apk upgrade \
    && apk add --no-cache \
        zip \
        unzip \
        curl \
        git \
	ffmpeg \
        oniguruma-dev \
        icu-dev \
        libpng-dev \
        libjpeg-turbo-dev \
        freetype-dev \
        libxml2-dev \
        libzip-dev \
        imagemagick-dev \
        bash \
        autoconf \
        g++ \
        make \
        openssh \
        bzip2-dev \
        gmp-dev \
        openldap-dev \
    && docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install -j$(nproc) pdo_mysql gd intl mbstring exif bcmath bz2 soap xml zip opcache ldap gmp calendar \
    && pecl install imagick \
    && docker-php-ext-enable imagick

# Instale o Composer
RUN curl --show-error https://getcomposer.org/installer -o /tmp/composer-setup.php \
    && php /tmp/composer-setup.php --install-dir=/usr/local/bin --filename=composer \
    && rm /tmp/composer-setup.php

