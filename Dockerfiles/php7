FROM php:7.4.32-fpm-alpine3.16

WORKDIR /var/www

# Use `apk` para instalar pacotes no Alpine
RUN apk update \
    && apk upgrade \
    && apk add --no-cache \
        zip \
        unzip \
        curl \
        git \
	ffmpeg \
        oniguruma-dev \
        icu-dev \
        libpng-dev \
        libjpeg-turbo-dev \
        freetype-dev \
        libxml2-dev \
        libzip-dev \
        imagemagick-dev \
        bash \
        autoconf \
        g++ \
        make \
        openssh \
        bzip2-dev \
        gmp-dev \
        openldap-dev \
    && docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install -j$(nproc) pdo_mysql gd intl mbstring exif bcmath bz2 soap xml zip opcache ldap gmp calendar \
    && pecl install imagick \
    && docker-php-ext-enable imagick

# --- Instalação da extensão Redis ---
# Instala a extensão Redis via PECL
RUN pecl install redis \
    && docker-php-ext-enable redis
# --- Fim da instalação Redis ---
